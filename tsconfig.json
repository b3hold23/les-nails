{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES6",
      "DOM",
      "ESNext.AsyncIterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}